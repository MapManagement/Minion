<Page
    x:Class="MinionUI.CreationPages.Cpu.CpuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:local="using:MinionUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="CpuMainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="LeftCpuStackPanel"
                    Orientation="Vertical"
                    BorderThickness="1"
                    CornerRadius="5"
                    Grid.Column="0">
            <TextBox x:Name="CpuConfigurationTextBox"
                    Text="some text" />
        </StackPanel>

        <StackPanel x:Name="RightCpuStackPanel"
                    Orientation="Vertical"
                    BorderThickness="1"
                    CornerRadius="5"
                    Grid.Column="1">
            <TextBox x:Name="CpuConfigurationTextBox2"
                    Text="some text" />
        </StackPanel>
    </Grid>

</Page>
